@{
    Layout = "~/Views/Shared/_Layout.cshtml";


    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <h1 class="text-center">Login de Usuario</h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form method="post" action="/Usuario/Validar" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Nombre de Usuario</label>
            <input name="nomusuario" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input name="password" type="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>

   
    <div class="mt-3 text-center">
        <a href="/Usuario/Registrar" class="btn btn-secondary">¿No tienes cuenta? Regístrate</a>
    </div>
</div>
