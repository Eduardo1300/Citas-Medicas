@model IEnumerable<wa_citas_medicas.Dtos.QueryMedicoDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<div class="container mt-5">
    <div class="card shadow rounded p-5 mx-auto">
        <h1 class="text-center">Lista de Médicos</h1>

        <div class="mb-3">
            <a href="/Medico/Create" class="btn btn-primary">Registrar Médico</a>
            <a href="/CitaMedica/Index" class="btn btn-success">Listado de Citas</a>
            <a href="/Paciente/Index" class="btn btn-info">Listado de Pacientes</a>
        </div>

        <hr />

        <table id="tablaMedicos" class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Especialidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medico in Model)
                {
                    <tr>
                        <td>@medico.Nombre</td>
                        <td>@medico.Apellido</td>
                        <td>@medico.Telefono</td>
                        <td>@medico.Especialidad</td>
                        <td>
                            <a href="@Url.Action("Edit", "Medico", new { id = medico.Medicoid })" class="btn btn-sm btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Home/MenuPrincipal" class="btn btn-dark">Menú Principal</a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tablaMedicos').DataTable({
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
            }
        });
    });
</script>