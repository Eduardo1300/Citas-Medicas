<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mi Sitio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header class="bg-info text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4">Clínica Tu Salud - Sistema de Citas Médicas</h1>
            <img src="https://static.vecteezy.com/system/resources/previews/005/072/571/non_2x/modern-health-clinic-logo-vector.jpg" alt="Logo" class="img-fluid" style="max-height: 90px;">
        </div>
    </header>

    <!-- Contenido  -->
    <main class="container mt-4 flex-fill">
        @RenderBody()
    </main>

    <!-- Footer  -->
    <footer class="bg-info text-center p-3 mt-auto">
        <small>&copy; 2025 Clínica Tu Salud. Todos los derechos reservados.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
